<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
  </head>

  <body>
    <%= render "layouts/menu" %>
      <div class="container">
        <%= form_with(url: search_shoes_path, method: :get, local: true) do |f| %>
        <div class="field is-grouped mb-5">
          <%= f.text_field :keywords, class: "input", placeholder: 'Search by keyword' %>
          <%= f.select :brand_id, Brand.all.map { |b| [b.brand_name, b.id] }, { prompt: "All Brands" }, class: "select" %>
          <div class="control">
            <%= f.submit "Search", class: "button is-primary" %>
          </div>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>

