<div class="card">
  <div class="card-content">
    <h1 class="title is-2">Shopping Cart</h1>

    <% if @cart.present? %>
      <% @cart.each do |item| %>
        <div class="columns is-multiline">
          <div class="column is-full">
            <div class="box">
              <div class="columns">
                <div class="column">
                  <% if item["shoe"].image.attached? %>
                    <%= image_tag rails_blob_path(item["shoe"].image, only_path: true), alt: item["shoe"].name, class: "image is-128x128 mb-3" %>
                  <% else %>
                    <p>No Image</p>
                  <% end %>
                </div>
                <div class="column">
                  <p class="title is-5"><%= item["shoe"].name %></p>
                  <p class="mt-1 subtitle is-6 has-text-grey"><%= truncate(item["shoe"].description, length: 100) %></p>
                </div>
                <div class="column">
                  <p class="title is-5">Quantity</p>
                  <%= form_with(url: update_quantity_cart_path(item["shoe"].id), method: :post) do |form| %>
                    <div class="field">
                      <%= form.hidden_field(:id, value: item["shoe"].id) %>
                      <%= form.number_field(:quantity, value: item["quantity"], min: 1, class: 'input') %>
                      <%= form.button("Update", type: 'submit', class: 'button is-primary is-small') %>
                    </div>
                  <% end %>
                </div>
                <div class="column">
                  <p class="title is-5">Price</p>
                  <p class="has-text-success has-text-weight-bold"><%= number_to_currency(item["shoe"].price) %></p>
                </div>
                <div class="column">
                  <%= link_to 'Remove', cart_path(item["shoe"].id), 'data-turbo-method': :delete, class: 'button is-danger is-small' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="columns box">
        <div class="column">
          <p>Total Price: <%= number_to_currency(@total_price) %></p>
        </div>
        <div class="column">
          <%= form_with(url: orders_path, method: :post) do |form| %>
            <%= form.button('Order All', type: 'submit', class: 'button is-success') %>
          <% end %>
        </div>
      </div>
    <% else %>
      <p class="subtitle is-6">Your cart is empty.</p>
    <% end %>
  </div>
</div>
